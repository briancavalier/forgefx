{
  "private": true,
  "workspaces": ["packages/*"],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "flow"
    ],
    "plugins": [
      "syntax-object-rest-spread"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "curly": [
        "error",
        "multi",
        "consistent"
      ]
    }
  }
}
